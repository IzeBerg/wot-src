<?xml version="1.0" encoding="utf-8"?>
<root>
	<default-scene>DefaultScene</default-scene>
	<initial-scene>DefaultScene</initial-scene>
	<scenes>
		<scene>
			DefaultScene
			<post-effects/>
			<runtime-effects/>
			<gui-items/>
		</scene>
		<scene>
			Hangar
			<post-effects/>
			<runtime-effects/>
			<gui-items/>
		</scene>
	</scenes>
	<global-runtime-effects>
		<pre-scene>
			<request-exclusive-hint>FightButton</request-exclusive-hint>
		</pre-scene>
		<post-scene>
			<update-exclusive-hints/>
		</post-scene>
	</global-runtime-effects>
	<has-id>
		<checkpoint>
			StartCheckpoint
			<condition/>
			<effects>
				<invoke-gui-cmd>OverrideHangarMenuButtons</invoke-gui-cmd>
				<set-visible>
					MainMenuGradient
					<val>False</val>
				</set-visible>
				<set-visible>
					HeaderCenterBg
					<val>False</val>
				</set-visible>
				<set-visible>
					HeaderCenterMenuBg
					<val>False</val>
				</set-visible>
				<set-visible>
					HeaderPanel
					<val>False</val>
				</set-visible>
				<set-visible>
					DailyQuestPanel
					<val>False</val>
				</set-visible>
				<show-demo-acc-renaming/>
				<set-var>FirstVehicleSetter</set-var>
				<effects-group>
					<condition>
						<game-item>
							FirstVehicleCD
							<not-in-inventory/>
						</game-item>
					</condition>
					<effects>
						<show-dialog>SelectNationDialog</show-dialog>
						<set-bootcamp-nation>SelectedNationID</set-bootcamp-nation>
						<set-var>FirstVehicleSetter</set-var>
						<start-vse-plan>
							<plan>BootCamp/Lesson_1_lobby</plan>
						</start-vse-plan>
					</effects>
				</effects-group>
			</effects>
		</checkpoint>
		<checkpoint>
			EndCheckpoint
			<condition>
				<game-item>
					FirstVehicleCD
					<in-inventory/>
				</game-item>
			</condition>
			<effects>
				<set-visible>
					HeaderPanel
					<val>True</val>
				</set-visible>
				<set-visible>
					DailyQuestPanel
					<val>True</val>
				</set-visible>
				<set-allowed-to-fight>
					<value>True</value>
				</set-allowed-to-fight>
			</effects>
		</checkpoint>
		<dialog>
			SelectNationDialog
			<type>bootcampSelectNation</type>
			<result-var>SelectedNationID</result-var>
			<sequence/>
			<buttons/>
			<actions/>
		</dialog>
		<game-attribute>
			DefaultNationSetter
			<var-ref>SelectedNationID</var-ref>
			<name>BootcampNationID</name>
		</game-attribute>
		<game-attribute>
			FirstVehicleSetter
			<var-ref>FirstVehicleCD</var-ref>
			<name>BootcampNationDataField</name>
			<args>vehicle_first</args>
		</game-attribute>
	</has-id>
	<vars>
		<var-set>
			EnabledHeaderMenuButtons
			<asList>
				<asString>settings</asString>
				<asString>account</asString>
			</asList>
		</var-set>
		<var-set>
			EnabledHangarMenuButtons
			<asList/>
		</var-set>
		<var-set>
			SelectedNation
			<asString/>
		</var-set>
	</vars>
	<triggers>
		<trigger>
			CheckpointController
			<type>linear-checkpoint-controller</type>
			<validate-var/>
			<sequence>
				<checkpoint>StartCheckpoint</checkpoint>
				<checkpoint>EndCheckpoint</checkpoint>
			</sequence>
			<on-effects>
				<save-checkpoint/>
			</on-effects>
		</trigger>
	</triggers>
</root>
