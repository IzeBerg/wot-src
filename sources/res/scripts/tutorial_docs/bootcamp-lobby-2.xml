<?xml version="1.0" encoding="utf-8"?>
<root>
	<default-scene>DefaultScene</default-scene>
	<initial-scene>DefaultScene</initial-scene>
	<scenes>
		<scene>
			DefaultScene
			<post-effects/>
			<runtime-effects/>
			<gui-items/>
		</scene>
		<scene>
			Hangar
			<post-effects/>
			<runtime-effects>
				<request-exclusive-hint>
					VehicleResearchButton
					<condition>
						<checkpoint-not-reached>ModuleBoughtCheckpoint</checkpoint-not-reached>
					</condition>
				</request-exclusive-hint>
			</runtime-effects>
			<gui-items/>
		</scene>
		<scene>
			Research
			<post-effects>
				<set-gui-item-criteria>ResearchItemNodeCriteria</set-gui-item-criteria>
				<inactivate>ResearchItemNodePlayed</inactivate>
			</post-effects>
			<runtime-effects>
				<effects-group>
					<condition>
						<checkpoint-reached>ModuleUnlockedCheckpoint</checkpoint-reached>
						<checkpoint-not-reached>ModuleBoughtCheckpoint</checkpoint-not-reached>
						<inactive>ResearchItemNodePlayed</inactive>
					</condition>
					<effects>
						<play-animation>
							ResearchItemNode
							<type>clip</type>
							<wait_for_finish>True</wait_for_finish>
						</play-animation>
						<activate>ResearchItemNodePlayed</activate>
					</effects>
				</effects-group>
				<request-exclusive-hint>
					ResearchItemNodeButton
					<condition>
						<checkpoint-not-reached>ModuleBoughtCheckpoint</checkpoint-not-reached>
					</condition>
				</request-exclusive-hint>
			</runtime-effects>
			<gui-items/>
		</scene>
	</scenes>
	<global-runtime-effects>
		<pre-scene>
			<request-exclusive-hint>
				MenuHangar
				<condition>
					<checkpoint-reached>ModuleBoughtCheckpoint</checkpoint-reached>
					<not-on-scene>Hangar</not-on-scene>
				</condition>
			</request-exclusive-hint>
			<request-exclusive-hint>
				FightButton
				<condition>
					<checkpoint-reached>EndCheckpoint</checkpoint-reached>
					<on-scene>Hangar</on-scene>
				</condition>
			</request-exclusive-hint>
		</pre-scene>
		<post-scene>
			<update-exclusive-hints/>
		</post-scene>
	</global-runtime-effects>
	<has-id>
		<checkpoint>
			StartCheckpoint
			<condition/>
			<effects>
				<set-var>FirstVehicleSetter</set-var>
				<set-var>ModuleSetter</set-var>
				<invoke-gui-cmd>
					OverrideHangarMenuButtons
					<args>
						<arg>
							EnabledHangarMenuButtons_Initial
							<name>buttonsListVarID</name>
						</arg>
					</args>
				</invoke-gui-cmd>
				<set-visible>
					MainMenuGradient
					<val>False</val>
				</set-visible>
				<set-visible>
					HeaderCenterBg
					<val>False</val>
				</set-visible>
				<set-visible>
					HeaderCenterMenuBg
					<val>False</val>
				</set-visible>
				<show-dialog>IntroDialogCredits</show-dialog>
				<set-visible>
					VehicleResearchPanel
					<val>True</val>
				</set-visible>
				<set-visible>
					VehicleResearchPanelBG
					<val>True</val>
				</set-visible>
				<set-visible>
					VehicleResearchButton
					<val>True</val>
				</set-visible>
				<play-animation>
					VehicleResearchPanel
					<type>tween</type>
					<wait_for_finish>False</wait_for_finish>
				</play-animation>
				<play-animation>
					VehicleResearchPanelBG
					<type>tween</type>
					<wait_for_finish>True</wait_for_finish>
				</play-animation>
				<set-visible>
					HangarParams
					<val>True</val>
				</set-visible>
				<play-animation>
					HangarParams
					<type>tween</type>
					<wait_for_finish>True</wait_for_finish>
					<condition>
						<not-on-scene>Research</not-on-scene>
					</condition>
				</play-animation>
				<show-dialog>IntroDialogExp</show-dialog>
				<play-animation>
					CreditsButton
					<type>tween</type>
					<wait_for_finish>True</wait_for_finish>
				</play-animation>
				<set-visible>
					CreditsButton
					<val>True</val>
				</set-visible>
				<invoke-gui-cmd>
					OverrideHangarMenuButtons
					<args>
						<arg>
							EnabledHangarMenuButtons_AfterIntro
							<name>buttonsListVarID</name>
						</arg>
					</args>
				</invoke-gui-cmd>
				<set-visible>
					MainMenuGradient
					<val>True</val>
				</set-visible>
				<set-visible>
					HeaderCenterBg
					<val>True</val>
				</set-visible>
				<set-visible>
					HeaderCenterMenuBg
					<val>True</val>
				</set-visible>
				<play-animation>
					MainMenuButtonBar
					<type>tween</type>
					<wait_for_finish>False</wait_for_finish>
				</play-animation>
				<play-animation>
					MainMenuGradient
					<type>tween</type>
					<wait_for_finish>False</wait_for_finish>
				</play-animation>
				<play-animation>
					HeaderCenterBg
					<type>tween</type>
					<wait_for_finish>False</wait_for_finish>
				</play-animation>
				<play-animation>
					HeaderCenterMenuBg
					<type>tween</type>
					<wait_for_finish>False</wait_for_finish>
				</play-animation>
				<play-animation>
					MenuHangar
					<type>tween</type>
					<wait_for_finish>True</wait_for_finish>
				</play-animation>
			</effects>
		</checkpoint>
		<checkpoint>
			ModuleUnlockedCheckpoint
			<condition>
				<game-item>
					ModuleCD
					<unlocked/>
				</game-item>
			</condition>
			<effects>
				<show-window>
					SubtitleModuleInvestigated
					<condition>
						<checkpoint-not-reached>ModuleBoughtCheckpoint</checkpoint-not-reached>
					</condition>
				</show-window>
			</effects>
		</checkpoint>
		<checkpoint>
			ModuleBoughtCheckpoint
			<condition>
				<game-item>
					ModuleCD
					<installed>FirstVehicleCD</installed>
				</game-item>
			</condition>
			<effects>
				<show-window>
					SubtitleModulePurchased
					<condition>
						<checkpoint-not-reached>EndCheckpoint</checkpoint-not-reached>
					</condition>
				</show-window>
				<update-layout>AmmunitionPanel</update-layout>
			</effects>
		</checkpoint>
		<checkpoint>
			EndCheckpoint
			<condition>
				<on-scene>Hangar</on-scene>
			</condition>
			<effects>
				<set-allowed-to-fight>
					<value>True</value>
				</set-allowed-to-fight>
			</effects>
		</checkpoint>
		<game-attribute>
			FirstVehicleSetter
			<var-ref>FirstVehicleCD</var-ref>
			<name>BootcampNationDataField</name>
			<args>vehicle_first</args>
		</game-attribute>
		<game-attribute>
			ModuleSetter
			<var-ref>ModuleCD</var-ref>
			<name>BootcampNationDataField</name>
			<args>module</args>
		</game-attribute>
		<gui-item-criteria>
			ResearchItemNodeCriteria
			<item-id>ResearchItemNodeID</item-id>
			<value>id=$ModuleCD$</value>
		</gui-item-criteria>
		<window>
			SubtitleTankImprovement
			<type>bootcampSubtitle</type>
			<sequence>
				<message>
					<data>
						<subtitle>#bootcamp:subtitles/vo_bc_hangar_tank_improvement</subtitle>
						<voiceover>vo_bc_hangar_tank_improvement</voiceover>
					</data>
				</message>
				<message>
					<data>
						<subtitle>#bootcamp:subtitles/vo_bc_hangar_silver</subtitle>
						<voiceover>vo_bc_hangar_silver</voiceover>
					</data>
				</message>
			</sequence>
			<buttons>
				<close>NoResultsWindowCloseButton</close>
			</buttons>
			<actions>
				<click>
					NoResultsWindowCloseButton
					<effects>
						<activate>NoResultsWindowClosed</activate>
					</effects>
				</click>
			</actions>
		</window>
		<window>
			SubtitleExperience
			<type>bootcampSubtitle</type>
			<sequence>
				<message>
					<data>
						<subtitle>#bootcamp:subtitles/vo_bc_hangar_experience</subtitle>
						<voiceover>vo_bc_hangar_experience</voiceover>
					</data>
				</message>
			</sequence>
			<buttons>
				<close>NoResultsWindowCloseButton</close>
			</buttons>
			<actions>
				<click>
					NoResultsWindowCloseButton
					<effects>
						<activate>NoResultsWindowClosed</activate>
					</effects>
				</click>
			</actions>
		</window>
		<dialog>
			IntroDialogCredits
			<type>bootcampMessage</type>
			<sequence>
				<message>
					<data>
						<preset>ORANGE</preset>
						<icon>../maps/icons/bootcamp/lines/bcCredits.png</icon>
						<label>#bootcamp:message/credits/label</label>
						<text>#bootcamp:message/credits/text</text>
						<subtitle>SubtitleTankImprovement</subtitle>
						<voiceover>bc_info_line_universal</voiceover>
						<bottom_renderer>rewards</bottom_renderer>
						<bottom>
							<data>
								<icon>../maps/icons/bootcamp/rewards/bcCredits.png</icon>
								<label>{0}</label>
								<label_format>getCredits</label_format>
								<labelTooltip>#tooltips:credits/header</labelTooltip>
								<iconTooltip>../maps/icons/bootcamp/rewards/tooltips/bcCredits.png</iconTooltip>
								<description>#bootcamp:message/credits/text</description>
								<animationTarget>lobby:header.headerButtonBar.container.id=credits.container.0.moneyIconText.iconClip</animationTarget>
								<animationType>credits</animationType>
							</data>
						</bottom>
					</data>
				</message>
			</sequence>
			<buttons/>
			<actions/>
		</dialog>
		<dialog>
			IntroDialogExp
			<type>bootcampMessage</type>
			<sequence>
				<message>
					<data>
						<preset>ORANGE</preset>
						<icon>../maps/icons/bootcamp/lines/bcExp.png</icon>
						<label>#bootcamp:message/experience/label</label>
						<text>#bootcamp:message/experience/text</text>
						<subtitle>SubtitleExperience</subtitle>
						<voiceover>bc_info_line_universal</voiceover>
						<bottom_renderer>rewards</bottom_renderer>
						<bottom>
							<data>
								<icon>../maps/icons/bootcamp/rewards/bcExp.png</icon>
								<label>{0}</label>
								<label_format>getExperience</label_format>
								<labelTooltip>#tooltips:XP/header</labelTooltip>
								<iconTooltip>../maps/icons/bootcamp/rewards/tooltips/bcExp.png</iconTooltip>
								<description>#bootcamp:message/experience/text</description>
								<animationTarget>hangar:vehResearchPanel.xpText.iconClip.1</animationTarget>
								<animationType>experience</animationType>
							</data>
						</bottom>
					</data>
				</message>
			</sequence>
			<buttons/>
			<actions/>
		</dialog>
		<window>
			SubtitleModuleInvestigated
			<type>bootcampSubtitle</type>
			<sequence>
				<message>
					<data>
						<subtitle>#bootcamp:subtitles/vo_bc_hangar_module_investigated</subtitle>
						<voiceover>vo_bc_hangar_module_investigated</voiceover>
					</data>
				</message>
			</sequence>
			<buttons>
				<close>NoResultsWindowCloseButton</close>
			</buttons>
			<actions>
				<click>
					NoResultsWindowCloseButton
					<effects>
						<activate>NoResultsWindowClosed</activate>
					</effects>
				</click>
			</actions>
		</window>
		<window>
			SubtitleModulePurchased
			<type>bootcampSubtitle</type>
			<sequence>
				<message>
					<data>
						<subtitle>#bootcamp:subtitles/vo_bc_hangar_module_purchased</subtitle>
						<voiceover>vo_bc_hangar_module_purchased</voiceover>
					</data>
				</message>
			</sequence>
			<buttons>
				<close>NoResultsWindowCloseButton</close>
			</buttons>
			<actions>
				<click>
					NoResultsWindowCloseButton
					<effects>
						<activate>NoResultsWindowClosed</activate>
					</effects>
				</click>
			</actions>
		</window>
	</has-id>
	<vars>
		<var-set>
			EnabledHeaderMenuButtons
			<asList>
				<asString>settings</asString>
				<asString>account</asString>
				<asString>credits</asString>
			</asList>
		</var-set>
		<var-set>
			EnabledHangarMenuButtons_Initial
			<asList/>
		</var-set>
		<var-set>
			EnabledHangarMenuButtons_AfterIntro
			<asList>
				<asString>hangar</asString>
			</asList>
		</var-set>
	</vars>
	<triggers>
		<trigger>
			CheckpointController
			<type>linear-checkpoint-controller</type>
			<validate-var/>
			<sequence>
				<checkpoint>StartCheckpoint</checkpoint>
				<checkpoint>ModuleUnlockedCheckpoint</checkpoint>
				<checkpoint>ModuleBoughtCheckpoint</checkpoint>
				<checkpoint>EndCheckpoint</checkpoint>
			</sequence>
			<on-effects>
				<save-checkpoint/>
			</on-effects>
		</trigger>
	</triggers>
</root>
