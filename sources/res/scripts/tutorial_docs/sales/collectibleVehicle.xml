<?xml version="1.0" encoding="utf-8"?>
<root>
	<default-scene>DefaultScene</default-scene>
	<initial-scene>Hangar</initial-scene>
	<scenes>
		<scene>
			Hangar
			<post-effects>
				<run-trigger>CollectibleVehicleTrigger</run-trigger>
			</post-effects>
			<runtime-effects>
				<show-hint>
					ResearchVehicleHint
					<condition>
						<active>VehicleResearchOnScene</active>
						<active>currentVehicleIsCollectible</active>
					</condition>
				</show-hint>
				<refuse-training>
					<condition>
						<active>isCompleted</active>
					</condition>
				</refuse-training>
			</runtime-effects>
			<gui-items>
				<gui-item>
					VehicleResearchButton
					<on-scene-effects>
						<activate>VehicleResearchOnScene</activate>
					</on-scene-effects>
					<not-on-scene-effects>
						<inactivate>VehicleResearchOnScene</inactivate>
					</not-on-scene-effects>
				</gui-item>
			</gui-items>
		</scene>
		<scene>
			DefaultScene
			<post-effects/>
			<runtime-effects/>
			<gui-items/>
		</scene>
	</scenes>
	<has-id>
		<hint>
			ResearchVehicleHint
			<item-id>VehicleResearchButton</item-id>
			<text>#tutorial:collectibleVehicles/researchModules</text>
			<arrow>
				<direction>L</direction>
				<loop>True</loop>
			</arrow>
			<update-runtime>True</update-runtime>
			<actions>
				<click>
					VehicleResearchButton
					<effects>
						<activate>isCompleted</activate>
						<refuse-training/>
					</effects>
				</click>
				<click-outside>
					VehicleResearchButton
					<effects>
						<run-trigger>CollectibleVehicleTrigger</run-trigger>
					</effects>
				</click-outside>
				<esc>
					VehicleResearchButton
					<effects>
						<refuse-training/>
					</effects>
				</esc>
			</actions>
		</hint>
	</has-id>
	<triggers>
		<trigger>
			CollectibleVehicleTrigger
			<type>isCollectibleVehicle</type>
			<on-effects>
				<activate>currentVehicleIsCollectible</activate>
			</on-effects>
			<off-effects>
				<inactivate>currentVehicleIsCollectible</inactivate>
				<close-hint>ResearchVehicleHint</close-hint>
			</off-effects>
		</trigger>
	</triggers>
	<vars/>
</root>
